{
  "name": "@soybeanjs/materials",
  "version": "0.0.1",
  "private": true,
  "description": "SoybeanJS's component materials, include Vue, React",
  "author": {
    "name": "SoybeanJS",
    "email": "honghuangdc@gmail.com",
    "url": "https://github.com/soybeanjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/materials",
  "repository": {
    "url": "https://github.com/soybeanjs/materials.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/materials/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "commit": "soy git-commit",
    "cleanup": "soy cleanup",
    "update-pkg": "soy update-pkg",
    "init-git": "soy init-git-hooks",
    "tsx": "tsx",
    "update-version": "bumpp package.json packages/*/package.json",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "pnpm update-version && pnpm publish-pkg",
    "prepare": "pnpm -r run stub",
    "sync-pkg": "tsx ./scripts/sync.ts"
  },
  "devDependencies": {
    "@soybeanjs/cli": "^0.1.6",
    "bumpp": "^8.2.1",
    "eslint": "^8.33.0",
    "eslint-config-soybeanjs": "^0.2.3",
    "lint-staged": "12.5.0",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "typescript": "4.9.5",
    "zx": "^7.1.1"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soybean git-commit-verify",
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "eslint . --fix"
    ]
  }
}
